    padding: 15px;
  }
  
  .empty-state-actions {
    flex-direction: column;
    gap: 10px;
  }
  
  .empty-state-actions button {
    width: 100%;
    padding: 14px;
  }
}

/* Tablet adjustments */
@media (min-width: 769px) and (max-width: 1024px) {
  .clientes-container.grid {
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 18px;
  }
  
  .search-section {
    padding: 22px;
  }
  
  .page-header {
    padding: 22px;
  }
}

/* Small mobile adjustments */
@media (max-width: 480px) {
  .page-header {
    padding: 15px 10px;
  }
  
  .header-content h1 {
    font-size: 1.6rem;
  }
  
  .search-section {
    padding: 15px 10px;
  }
  
  .empty-state {
    padding: 30px 10px;
  }
  
  .empty-state .empty-icon,
  .empty-state .no-results-icon {
    font-size: 3rem;
  }
  
  .search-suggestions {
    margin: 10px 0;
    padding: 12px;
  }
  
  .clientes-container.grid {
    padding: 0;
  }
}